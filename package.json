{
	"name": "discobot",
	"version": "0.0.0-dev",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "concurrently -n backend,app -c cyan,yellow \"pnpm dev:backend\" \"pnpm dev:app\"",
		"dev:backend": "concurrently -n vite,server,agent -c cyan,green,magenta \"pnpm dev:frontend\" \"pnpm dev:server\" \"pnpm dev:agent\"",
		"dev:app": "tauri dev",
		"dev:frontend": "vite",
		"dev:server": "cd server && cross-env SUGGESTIONS_ENABLED=true go run github.com/air-verse/air@latest",
		"dev:agent": "tsx --watch scripts/agent-watcher/index.ts",
		"dev:db": "bash .discobot/services/db.sh",
		"dev:vz": "tsx --watch scripts/vz-watcher/index.ts",
		"build": "pnpm build:server && pnpm build:frontend && pnpm build:app",
		"build:frontend": "vite build",
		"build:server": "node scripts/build-server.mjs",
		"build:app": "tauri build",
		"preview": "vite preview",
		"test": "pnpm test:unit && pnpm test:integration",
		"test:unit": "concurrently \"pnpm test:server:unit\" \"pnpm test:proxy:unit\" \"pnpm test:agent-api:unit\" \"pnpm test:watcher\" \"pnpm test:frontend\"",
		"test:integration": "concurrently \"pnpm test:server:integration\" \"pnpm test:proxy:integration\" \"pnpm test:agent-api:integration\"",
		"test:frontend": "node --import ./test/setup.js --import tsx --test 'lib/**/*.test.ts' 'components/**/*.test.ts' 'components/**/*.test.tsx'",
		"test:watcher": "node --import tsx --test scripts/agent-watcher/watcher.test.ts",
		"test:server": "cd server && go test -v ./...",
		"test:server:unit": "cd server && go test -v $(go list ./... | grep -v /integration)",
		"test:server:integration": "cd server && go test -v ./internal/integration/...",
		"test:proxy": "cd proxy && go test -v ./...",
		"test:proxy:unit": "cd proxy && go test -v $(go list ./... | grep -v /integration)",
		"test:proxy:integration": "cd proxy && go test -v -run Integration ./internal/proxy/",
		"test:agent-api": "pnpm --filter agent-api test",
		"test:agent-api:unit": "pnpm --filter agent-api test:unit",
		"test:agent-api:integration": "pnpm --filter agent-api test:integration",
		"check": "pnpm check:frontend && pnpm check:backend && pnpm check:shell",
		"check:fix": "pnpm check:frontend:fix && pnpm check:backend:fix && pnpm check:shell",
		"check:shell": "find . -name '*.sh' -not -path './node_modules/*' -not -path './.git/*' -exec shellcheck {} +",
		"check:frontend": "biome check . && eslint . && tsc --noEmit",
		"check:frontend:fix": "biome check . --write && biome check . && eslint . && tsc --noEmit",
		"check:backend": "cd server && go tool golangci-lint run && cd ../proxy && go tool golangci-lint run",
		"check:backend:fix": "cd server && go tool golangci-lint run --fix && cd ../proxy && go tool golangci-lint run --fix",
		"check:skills": ".claude/scripts/validate-skills.sh",
		"format": "biome format . --write",
		"typecheck": "tsc --noEmit",
		"ci": "pnpm check && pnpm test:unit && pnpm build:frontend && ([ \"$CI\" = \"true\" ] && git diff --exit-code || true)",
		"tauri": "tauri",
		"refresh-models": "./scripts/refresh-models-data.sh"
	},
	"dependencies": {
		"@ai-sdk/react": "^3.0.83",
		"@hookform/resolvers": "^5.2.2",
		"@icons-pack/react-simple-icons": "^13.11.2",
